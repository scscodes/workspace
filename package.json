{
  "name": "aidev",
  "private": true,
  "version": "0.0.1",
  "description": "AI-powered developer toolkit for VSCode",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build --workspace=@aidev/core",
    "build:vscode": "npm run build --workspace=aidev-vscode",
    "test": "npm run test --workspaces",
    "test:core": "npm run test --workspace=@aidev/core",
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check \"packages/*/src/**/*.ts\"",
    "clean": "npm run clean --workspaces"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.9.3"
  }
}
