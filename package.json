{
  "name": "meridian",
  "displayName": "Meridian",
  "description": "DDD-based command registry architecture for VS Code extensions with workflow engine and local agent discovery",
  "version": "0.0.1",
  "publisher": "scscodes",
  "license": "MIT",
  "engines": {
    "node": ">=22.22.0",
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "meridian-explorer",
          "title": "Meridian",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "meridian-explorer": [
        { "id": "meridian.git.view",      "name": "Git" },
        { "id": "meridian.hygiene.view",  "name": "Hygiene" },
        { "id": "meridian.workflow.view", "name": "Workflows" },
        { "id": "meridian.agent.view",    "name": "Agents" }
      ]
    },
    "chatParticipants": [
      {
        "id": "meridian",
        "name": "meridian",
        "fullName": "Meridian",
        "description": "Git, hygiene, workflow, and agent assistant",
        "isDefault": false
      }
    ],
    "commands": [
      {
        "command": "meridian.git.status",
        "title": "Git: Show Status",
        "category": "Git"
      },
      {
        "command": "meridian.git.pull",
        "title": "Git: Pull",
        "category": "Git"
      },
      {
        "command": "meridian.git.commit",
        "title": "Git: Commit",
        "category": "Git"
      },
      {
        "command": "meridian.git.smartCommit",
        "title": "Git: Smart Commit (Interactive)",
        "category": "Git"
      },
      {
        "command": "meridian.hygiene.scan",
        "title": "Hygiene: Scan Workspace",
        "category": "Hygiene"
      },
      {
        "command": "meridian.hygiene.cleanup",
        "title": "Hygiene: Cleanup",
        "category": "Hygiene"
      },
      {
        "command": "meridian.chat.context",
        "title": "Chat: Get Context",
        "category": "Chat"
      },
      {
        "command": "meridian.workflow.list",
        "title": "Workflow: List All",
        "category": "Workflow"
      },
      {
        "command": "meridian.workflow.run",
        "title": "Workflow: Run",
        "category": "Workflow"
      },
      {
        "command": "meridian.agent.list",
        "title": "Agent: List All",
        "category": "Agent"
      }
    ],
    "configuration": {
      "title": "Meridian",
      "properties": {
        "meridian.git.autofetch": {
          "type": "boolean",
          "default": false,
          "description": "Enable auto-fetch for git repositories"
        },
        "meridian.hygiene.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable workspace hygiene checks"
        },
        "meridian.hygiene.scanInterval": {
          "type": "number",
          "default": 60,
          "description": "Workspace scan interval in minutes"
        },
        "meridian.log.level": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logger output level"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && cp -r media out/media 2>/dev/null || true",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "echo 'Linting would run here'"
  },
  "devDependencies": {
    "@types/node": "^22.19.0",
    "@types/vscode": "^1.80.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "typescript": "^5.9.3",
    "vitest": "^1.0.4"
  }
}
